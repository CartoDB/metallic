{
  "name": "metallic",
  "version": "0.2.0",
  "description": "Essential facilities for building apps",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/metallic.git"
  },
  "keywords": [
    "launcher",
    "metallic"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/metallic/issues"
  },
  "homepage": "https://github.com/CartoDB/metallic#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "meow": "~3.7.0",
    "metallic-launcher": "^0.5.0",
    "metallic-logger": "^0.5.0",
    "metallic-metrics": "^0.4.0"
  },
  "scripts": {
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "coverage": "nyc --reporter=lcov npm test",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "NODE_ENV=test mocha --recursive -r babel-register -r source-map-support/register test",
    "test:watch": "npm run test -- -w"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "mocha": "^3.2.0",
    "node-fetch": "^1.6.3",
    "nyc": "^10.2.0",
    "sinon": "^2.1.0",
    "source-map-support": "^0.4.14",
    "standard": "^10.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
